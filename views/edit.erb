<form method="post" action="/memos/<%= @memo_id %>">
  <div class="container">
    <div class="form-items">
      <div class="form-items_title">
        <input type="text" name="title" value=<%= @memo_title %> class="form-control border-info title">
      </div>
      <div class="form-items_content">
        <textarea type="text" name="content" class="form-control border-info content"><%= @memo_content %></textarea>
      </div>
    </div>
    <div class="form-action form-row text-center">
      <div class="col-12 p-2">
        <input type="hidden" name="_method" value="PATCH">
        <input type="submit" value="変更" class="btn-outline-info btn-lg">
      </div>
    </div>
  </div>
</form>