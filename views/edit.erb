<form method="post" action="/memo/<%= @memo_id %>">
  <div class="container">
    <div class="form-items">
      <div class="form-items_title">
        <input type="text" name="title" value=<%= @memo_title %> class="form-control">
      </div>
      <div class="form-items_content">
        <textarea type="text" name="content" class="form-control"><%= @memo_content %></textarea>
      </div>
    </div>
    <div class="form-action">
      <input type="hidden" name="_method" value="PATCH">
      <input type="submit" value="変更">
    </div>
  </div>
</form>