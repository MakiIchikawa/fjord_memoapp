<form method="post" action="/memo/<%= @memo_id %>">
  <div class="form-items">
    <div class="form-items_title">
      <input type="text" name="title" value=<%= @memo_title %>>
    </div>
    <div class="form-items_content">
      <input type="text" name="content" value=<%= @memo_content %>>
    </div>
  </div>
  <div class="form-action">
    <input type="hidden" name="_method" value="PATCH">
    <input type="submit" value="変更">
  </div>
</form>
