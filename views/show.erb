<div class="container">
  <div class="memo">
    <div class="d-flex flex-column">
      <div class="p-2 border border-info">
        <p><%= @memo_title %></p>
      </div>
      <div class="p-2 border border-info">
        <p><%= @memo_content %></p>
      </div>
    </div>
    <div class="d-flex justify-content-center">
      <div class="p-2">
        <form method="get" action="/edit/<%= @memo_id %>">
          <div class="form-action">
            <input type="submit" value="変更" class="btn-outline-info btn-lg">
          </div>
        </form>
      </div>
      <div class="p-2">
        <form method="post" action="/memo/<%= @memo_id %>">
          <div class="form-action">
            <input type="hidden" name="_method" value="DELETE">
            <input type="submit" value="削除" class="btn-outline-info btn-lg">
          </div>
        </form>
      </div>
    </div>
  </div>